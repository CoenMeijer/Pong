package src{	import flash.display.MovieClip;	import flash.display.Sprite;	import flash.utils.Timer;	import flash.events.TimerEvent;		/**	 * ...	 * @author Coen Meijer	 */	public class Ball extends Sprite	{		public var _art:MovieClip = new GoodBallArt();		private var _position:Vector2D = new Vector2D(Main.STAGE.stageWidth/2,Main.STAGE.stageHeight/2);		public var _velocity:Vector2D = new Vector2D(7, 7);		public var _addPP1:Boolean = false;		public var _addPP2:Boolean = false;		public var _remove:Boolean = false;		public var _timer:Timer = new Timer(2000,0);		public var _add:Boolean = false;		private var buggFix:Boolean = true;				public function Ball() 		{			//this.graphics.beginFill(0x2cabe2);			//this.graphics.drawCircle(0, 0, 10);			addChild(_art);			_timer.addEventListener(TimerEvent.TIMER,respawn);		}				private function respawn(e:TimerEvent):void		{			var getal:int = (Math.floor(Math.random()*(4 - 1 +1))+1)			if(getal == 1)			{				_velocity.x = 7;				_velocity.y = 7;			}						if(getal == 2)			{				_velocity.x = -7;				_velocity.y = 7;			}						if(getal == 3)			{				_velocity.x = 7;				_velocity.y = -7;			}						if(getal == 4)			{				_velocity.x = -7;				_velocity.y = -7;			}						_position.x = Main.STAGE.stageWidth / 2;			_position.y = Main.STAGE.stageHeight/2;			_timer.reset();			_add = true;		}				public function update():void 		{			_position = _position.add(_velocity);						x = _position.x;			y = _position.y;			if(buggFix == false && _position.y < 395 && _position.y > 5)			{				buggFix = true;			}						if (_position.y + _art.inside_ball.height/2 + 9 >= stage.stageHeight && buggFix) 			{				buggFix = false;				_velocity.y *= -1;			}						if (_position.y - _art.inside_ball.height/2 - 9 <= 0 && buggFix) 				{				buggFix = false;				_velocity.y *= -1;			}						if (_position.x + _art.inside_ball.height/2 >= stage.stageWidth)			{				_addPP1 = true;					_remove = true;				_position.x = Main.STAGE.stageWidth/2;				_position.y = Main.STAGE.stageHeight/2;			}						else if (_position.x - _art.inside_ball.height/2 <= 0) 			{				_addPP2 = true;				_remove = true;				_position.x = Main.STAGE.stageWidth/2;				_position.y = Main.STAGE.stageHeight/2;			}		}				public function angle(playerY:Number, ballY:Number):Number 		{			var ySpeed = 10 * ((ballY - playerY) / 25);			return ySpeed;		}	}}