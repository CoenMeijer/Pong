package src {	import flash.display.MovieClip;	import flash.display.Sprite;	import flash.events.Event;	import flash.events.MouseEvent;	import flash.media.*;		/**	 * ...	 * @author Coen Meijer	 */	public class MainMenu extends Sprite	{		private var _startButton:StartButton = new StartButton(225, 200);		private var _creditsButton:CreditsButton = new CreditsButton(225, 275);		private var _menuArt:MovieClip = new MenuArt();				//Sound		private var firstAudio:Audio = new Audio();		public var menuSoundCh:SoundChannel = new SoundChannel();				public function MainMenu() 		{			addChild(_menuArt);			addChild(_startButton);			addChild(_creditsButton);			menuSoundCh = firstAudio.menuAudio.play();			_startButton.addEventListener(MouseEvent.CLICK, playGame);			_creditsButton.addEventListener(MouseEvent.CLICK, playCredits);					}				private function playGame(e:MouseEvent) {			dispatchEvent(new Event("PLAY_GAME"));		}				private function playCredits(e:MouseEvent) {			dispatchEvent(new Event("PLAY_CREDITS"));		}	}}