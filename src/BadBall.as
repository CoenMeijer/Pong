package src {	import flash.display.MovieClip;	import flash.display.Sprite;	import flash.events.TimerEvent;	import flash.utils.Timer;		/**	 * ...	 * @author Coen Meijer	 */	public class BadBall extends Sprite	{		public var _art:MovieClip = new BadBallArt();		public var _position:Vector2D = new Vector2D(Main.STAGE.stageWidth/2,Main.STAGE.stageHeight/2);		private var _velocity:Vector2D = new Vector2D(-7, -7);		public var _timer:Timer = new Timer(6000,0);		public var _remover:Timer = new Timer(500,0);		public var _noUpdate:Boolean = false;		public var _removeNow:Boolean = false;		public var _newBall:Boolean = false;		public var _sound:Boolean = false;				public function BadBall() 		{			addChild(_art);			_art.stop();			_timer.addEventListener(TimerEvent.TIMER,addBall);			_remover.addEventListener(TimerEvent.TIMER,removeBall);		}					public function removeBall(e:TimerEvent):void		{			_remover.stop();			_remover.reset();			_removeNow = true;		}				public function addBall(e:TimerEvent):void		{			_timer.stop();			_timer.reset();			_sound = false;			_noUpdate = false;			_art.gotoAndStop(1);			_newBall = true;		}				public function update():void		{			_position = _position.add(_velocity);						x = _position.x;			y = _position.y;						if (_position.y + _art.inside.height/2 + 8 >= stage.stageHeight ) 			{				_velocity.y *= -1;			}						if (_position.y - _art.inside.height/2 - 8 <= 0) 				{				_velocity.y *= -1;			}						if (_position.x + _art.inside.width/2 + 8 >= stage.stageWidth) 			{				_velocity.x *= -1;			}						else if (_position.x - _art.inside.width/2 - 8 <= 0) 			{				_velocity.x *= -1;			}		}	}}