package src {	import flash.display.Sprite;	import flash.text.TextField;	import flash.text.TextFormat;		/**	 * ...	 * @author Coen Meijer	 */	public class GUI extends Sprite	{		public var _scorePlayerOne:int = 0;		public var _scorePlayerTwo:int = 0;		private var _textPlayerOne:TextField = new TextField();		private var _textPlayerTwo:TextField = new TextField();		private var _guiFormat:TextFormat = new TextFormat();		public var _P1Wins:Boolean = false;		public var _P2Wins:Boolean = false;				public function GUI() 		{				_guiFormat.size = 20;			_guiFormat.color =0x99FFFF;			_guiFormat.font = "Matura MT Script Capitals";			_textPlayerOne.defaultTextFormat = _guiFormat;			_textPlayerOne.text = "P1: " + _scorePlayerOne.toString();			_textPlayerOne.width = 60;			_textPlayerOne.x = 30;						_textPlayerTwo.defaultTextFormat = _guiFormat;			_textPlayerTwo.text = "P2: " + _scorePlayerTwo.toString();			_textPlayerTwo.width = 60;			_textPlayerTwo.x = 470;							addChild(_textPlayerOne);				addChild(_textPlayerTwo);		}				public function update() 		{			_textPlayerOne.text = "P1: " + _scorePlayerOne.toString();			_textPlayerTwo.text = "P2: " + _scorePlayerTwo.toString();						if(_scorePlayerOne == 11)			{				_P1Wins = true;			}						if(_scorePlayerTwo == 11)			{				_P2Wins = true;			}		}				public function reset()		{			_scorePlayerOne = 0;		}	}}