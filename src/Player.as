package src{	import flash.display.MovieClip;	import flash.utils.Timer;	import flash.events.TimerEvent;		public class Player extends MovieClip	{		private var player1:MovieClip = new PlayerOneArt();		private var player2:MovieClip = new PlayerTwoArt();		public var _stun:Boolean = false;		public var _timer:Timer = new Timer(3000,0);		public var _speed:int = 13;				public function Player(i:int)		{			//addChild(art);			if(i == 1)			{				addChild(player1);			}						if(i == 2)			{				addChild(player2);			}						_timer.addEventListener(TimerEvent.TIMER,paralyzed);		}				private function paralyzed(e:TimerEvent):void		{			_timer.stop();			_timer.reset();			_stun = false;		}	}}