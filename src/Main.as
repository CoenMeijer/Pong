package src{	import flash.display.MovieClip;	import flash.events.Event;	import flash.events.KeyboardEvent;	import flash.display.Stage;	import flash.media.*;		public class Main extends MovieClip	{				private var mainMenu:MainMenu = new MainMenu();		private var game:Game;		private var credits:Credits;		public static var STAGE:Stage;		private var mainSoundCh:SoundChannel = new SoundChannel();		private var mainAudio:Audio = new Audio();						public function Main() 		{			init();				}				public function init() {			STAGE = stage;			addChild(mainMenu);			mainMenu.addEventListener("PLAY_GAME", playClicked);			mainMenu.addEventListener("PLAY_CREDITS", creditsClicked);		}				private function playClicked(e:Event) 		{			mainSoundCh = mainAudio.pressAudio.play();			removeMenu();			mainMenu.menuSoundCh.stop();						game = new Game();			addChild(game);				stage.addEventListener(KeyboardEvent.KEY_DOWN,game.movements);			stage.addEventListener(KeyboardEvent.KEY_UP, game.stopper);		}				private function creditsClicked(e:Event) 		{			mainMenu.removeEventListener("PLAY_GAME", playClicked);			mainMenu.removeEventListener("PLAY_CREDITS", creditsClicked);			removeMenu();						credits = new Credits(0,0);			addChild(credits);			credits.addEventListener("BACK_TO_MENU", backToMenu);		}				private function removeMenu() 		{			removeChild(mainMenu);			mainMenu.removeEventListener("PLAY_GAME", playClicked);		}		private function backToMenu(e:Event) {			if (contains(credits)) {				removeChild(credits);			}						init();		}	}}